<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="#141E27"
    android:padding="25dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvgfg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:gravity="center"
        android:text="Enter your code to convert:"
        android:fontFamily="sans-serif-light"
        android:textAlignment="viewStart"
        android:textColor="#DADBBD"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/result"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/llout"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Result :"
        android:textAlignment="viewStart"
        android:textColor="#DADBBD"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/etinput"
        android:layout_width="358dp"
        android:layout_height="118dp"
        android:layout_below="@+id/tvgfg"
        android:layout_marginTop="9dp"
        android:background="@drawable/mybutton"
        android:gravity="start" />

    <RelativeLayout
        android:id="@+id/llout"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clear"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnencode"
            android:layout_width="175dp"
            android:layout_height="65dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mybutton2"
            android:padding="10dp"
            android:text="EnCode"
            android:textColor="#DADBBD"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btndecode"
            android:layout_width="175dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="177dp"
            android:layout_marginLeft="177dp"
            android:background="@drawable/mybutton2"
            android:padding="13dp"
            android:text="decode"
            android:textColor="#DADBBD"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clear"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etinput"
        android:layout_marginTop="19dp"
        tools:ignore="InvalidId">

        <Button
            android:id="@+id/btnclear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/mybutton2"
            android:padding="13dp"
            android:text="clear"
            android:textColor="#DADBBD"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <EditText
        android:id="@+id/etoutput"
        android:layout_width="400dp"
        android:layout_height="163dp"
        android:layout_below="@+id/llout"
        android:layout_marginTop="60dp"
        android:background="@drawable/mybutton"
        android:gravity="start"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:id="@+id/lib_2"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:layout_below="@id/etoutput"
        android:layout_marginTop="13dp">

        <Button
            android:id="@+id/library"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/mybutton2"
            android:padding="13dp"
            android:text="Library"
            android:textColor="#DADBBD"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="2dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7836743221846483~1120829187">

    </com.google.android.gms.ads.AdView>

</RelativeLayout>